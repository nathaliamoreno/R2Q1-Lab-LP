#include <iostream>
#include "Pedido.h"
#include "MesaDeRestaurante.h"
#include "RestauranteCaseiro.h"

using namespace std;

int main()
{
    Pedido p[10];
    MesaDeRestaurante M1, M2;
    RestauranteCaseiro pM[10];
    p[0] = Pedido(1, "Descricao1", 1, 4.5); //numero, decricao, quantidade, valor
    p[1] = Pedido(2, "Descricao2", 3, 6.5);
    p[2] = Pedido(3, "Descricao3", 2, 5.0);

    M1.adicionaAoPedido(p[0]);
    M1.adicionaAoPedido(p[1]);
    M2.adicionaAoPedido(p[2]);

    pM[0].adicionaAoPedido(p[0], 1);
    pM[1].adicionaAoPedido(p[1], 3) ;
    pM[2].adicionaAoPedido(p[2], 2);

    //TESTANDO VALORES INICIAIS

    cout <<  "\n          P E D I D O S" << endl;
    cout << "\n  <<<< TESTANDO VALORES INICIAIS >>>>\n" << endl;
    cout <<  "_________________________\n" << endl;
    cout << "Numero do pedido: " << p[0].getNumero() << "\nDescricao: " << p[0].getDescricao() << "\nQuantidade: " << p[0].getQuantidade() << "\nPreco: R$  " << p[0].getPreco() <<endl;
    cout <<  "_________________________\n" << endl;
    cout << "Numero do pedido: " << p[1].getNumero() << "\nDescricao: " << p[1].getDescricao() << "\nQuantidade: " << p[1].getQuantidade() << "\nPreco: R$  " << p[1].getPreco() <<endl;
    cout <<  "_________________________\n" << endl;
    cout << "Numero do pedido: " << p[2].getNumero() << "\nDescricao: " << p[2].getDescricao() << "\nQuantidade: " << p[2].getQuantidade() << "\nPreco: R$  " << p[2].getPreco() <<endl;
    cout <<  "_________________________\n" << endl;

    //IMPRIMINDO VALORES
    M1.calculaTotal();
    M2.calculaTotal();
    pM[0].calculaTotalRestaurante();
    pM[1].calculaTotalRestaurante();
    pM[2].calculaTotalRestaurante();

    cout << "\n  <<<< TESTANDO VALORES INDIVIDUAIS DAS MESAS >>>>\n" << endl;
    cout << "Total do pedido mesa 1: R$ " << M1.calculaTotal() << endl;
    cout << "Total do pedido mesa 2: R$ " << M2.calculaTotal() << endl;

    cout << "\n  <<<< TESTANDO CALCULO DO TOTAL >>>>\n" << endl;
    cout << "Total Geral: R$ " << pM[3].calculaTotalRestaurante() << endl;

    cout << "\n  <<<< TESTANDO NOVA QUANTIDADE >>>>\n" << endl;
    cout << "Total do pedido mesa 2 ANTES da modificacao: R$ " << M2.calculaTotal() << endl;
    pM[2].adicionaAoPedido(p[2], 2);
    M2.calculaTotal();
    cout << "Total do pedido mesa 2 APOS da modificacao: R$ " << M2.calculaTotal() << endl;

     //AQUI TA OK \0/
    cout << "\n  <<<< TESTANDO VALOR ZERO >>>>\n" << endl;
    M1.zeraPedidos();
    cout << "Total do pedido zerado: R$ " << M1.calculaTotal() << endl;

    return 0;
}
